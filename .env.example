# AuditCaseOS Configuration
# Copy this file to .env and customize values

# PostgreSQL
POSTGRES_USER=auditcaseos
POSTGRES_PASSWORD=auditcaseos_secret
POSTGRES_DB=auditcaseos

# MinIO (Evidence Storage)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_BUCKET=evidence

# API Security
SECRET_KEY=change-me-in-production-use-a-long-random-string

# Ollama (Local LLM)
OLLAMA_MODEL=llama3.2

# Paperless-ngx (OCR)
PAPERLESS_DBNAME=paperless
PAPERLESS_SECRET_KEY=paperless-secret-change-me-in-production
PAPERLESS_ADMIN_USER=admin
PAPERLESS_ADMIN_PASSWORD=admin123
PAPERLESS_API_TOKEN=

# Nextcloud (File Collaboration)
NEXTCLOUD_DB=nextcloud
NEXTCLOUD_ADMIN_USER=admin
NEXTCLOUD_ADMIN_PASSWORD=admin123

# ONLYOFFICE (Document Editing)
ONLYOFFICE_JWT_SECRET=auditcaseos-onlyoffice-secret-change-in-production
